{
	"name": "LLMs Generator",
	"dockerComposeFile": "./docker-compose.yml",
	"service": "llms-txt-generator-ui",
	"runServices": [],
	"workspaceFolder": "/app",
	"shutdownAction": "none",
	"remoteUser": "root",
	"forwardPorts": [
		6060
	],
	"features": {
		// "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
	},
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/root/.ssh,readonly,type=bind"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"svelte.svelte-vscode",
				"dbaeumer.vscode-eslint"
			],
			"settings": {
				"editor.formatOnSave": true,
				"editor.formatOnSaveMode": "file",
				"[svelte]": {
					"editor.defaultFormatter": "dbaeumer.vscode-eslint"
				},
				"[javascript]": {
					"editor.defaultFormatter": "dbaeumer.vscode-eslint"
				},
				"[typescript]": {
					"editor.defaultFormatter": "dbaeumer.vscode-eslint"
				},
				"[css]": {
					"editor.defaultFormatter": "dbaeumer.vscode-eslint"
				},
				"[html]": {
					"editor.defaultFormatter": "dbaeumer.vscode-eslint"
				},
				"[json]": {
					"editor.defaultFormatter": "vscode.json-language-features"
				},
				"typescript.tsdk": "node_modules/typescript/lib",
				"eslint.validate": [
					"javascript",
					"typescript",
					"html"
				],
				"terminal.integrated.defaultProfile.linux": "bash"
			},
			"launch": {
				"version": "0.2.0",
				"configurations": [
					{
						"type": "node",
						"request": "attach",
						"name": "Attach to SvelteKit",
						"address": "localhost",
						"port": 9229,
						"localRoot": "${workspaceFolder}",
						"remoteRoot": "/app",
						"skipFiles": [
							"<node_internals>/**",
							"**/node_modules/**"
						],
						"sourceMaps": true,
						"restart": true,
						"timeout": 30000
					}
				]
			}
		}
	},
	"postCreateCommand": "git config --global --add safe.directory /app"
}