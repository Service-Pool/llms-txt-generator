{
	"name": "@llms-txt/ui",
	"version": "20.0.0",
	"scripts": {
		"build": "vite build",
		"preview": "vite preview --host 0.0.0.0 --port $PORT",
		"app": "node dist/index.js",
		"app:dev": "vite dev --host 0.0.0.0 --port $PORT",
		"check": "svelte-kit sync && svelte-check",
		"check:watch": "svelte-kit sync && svelte-check --watch",
		"check:all": "npm run check && tsc --noEmit && npm run lint",
		"lint": "eslint \"{src,apps,libs,test}/**/*.{ts,svelte}\" --fix"
	},
	"private": true,
	"type": "module",
	"dependencies": {
		"@google/genai": "^1.30.0",
		"@tailwindcss/postcss": "^4.1.11"
