{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"entryFile": "bootstrap/main",
	"compilerOptions": {
		"deleteOutDir": true,
		"builder": "swc",
		"typeCheck": true,
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"classValidatorShim": true,
					"introspectComments": true,
					"dtoFileNameSuffix": [
						".dto.ts",
						".entity.ts",
						"-request.dto.ts",
						"-response.dto.ts"
					]
				}
			}
		]
	}
}