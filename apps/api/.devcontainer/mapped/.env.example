APP_MODE=dev

# Docker
COMPOSE_PROJECT_NAME=llms-generator-api

# Frontend server port (development & production)
PORT=4200

# AI Providers
# Gemini модели (рекомендуются для production):
# - gemini-2.5-flash - новейшая стабильная fast модель
# - gemini-2.5-pro - новейшая стабильная pro модель
# - gemini-flash-latest - алиас на последнюю flash версию
# - gemini-pro-latest - алиас на последнюю pro версию
# 
# Gemma модели (через Gemini API):
# - gemma-3-1b-it - 1B параметров
# - gemma-3-4b-it - 4B параметров
# - gemma-3-12b-it - 12B параметров ← вам нужна эта
# - gemma-3-27b-it - 27B параметров

# AI Providers
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_KEEP_ALIVE=5m
OLLAMA_MEMORY_LIMIT=2G
OLLAMA_MODEL=qwen2.5:1.5b # qwen2.5:7b; qwen2.5:7b; llama3.2:3b; gemma-3-4b-it;
GEMINI_MODEL=gemini-2.5-flash

# Models Configuration (JSON array)
MODELS_CONFIG=[{"id":"gemini-flash","category":"Premium","displayName":"Gemini 2.5 Flash","description":"Fast, high-quality AI model from Google","serviceClass":"./models/gemini.service","modelName":"GEMINI_MODEL","baseRate":0.00015,"pageLimit":false,"queueName":"gemini-queue","queueType":"cloud","batchSize":20,"options":{"apiKey":"YOUR_GEMINI_API_KEY","temperature":0.7,"maxTokens":2048}},{"id":"ollama-local","category":"Fast","displayName":"Qwen 2.5 (Local)","description":"Free local model, slower but cost-effective","serviceClass":"./models/ollama.service","modelName":"OLLAMA_MODEL","baseRate":0.00,"pageLimit":false,"queueName":"ollama-queue","queueType":"local","batchSize":2,"options":{"baseUrl":"http://OLLAMA_HOST:OLLAMA_PORT","temperature":0.7,"maxTokens":2500}}]

