APP_MODE=dev

# Docker
COMPOSE_PROJECT_NAME=llms-generator-api

# Frontend server port (development & production)
PORT=4200

# AI Providers
# Gemini модели (рекомендуются для production):
# - gemini-2.5-flash - новейшая стабильная fast модель
# - gemini-2.5-pro - новейшая стабильная pro модель
# - gemini-flash-latest - алиас на последнюю flash версию
# - gemini-pro-latest - алиас на последнюю pro версию
# 
# Gemma модели (через Gemini API):
# - gemma-3-1b-it - 1B параметров
# - gemma-3-4b-it - 4B параметров
# - gemma-3-12b-it - 12B параметров ← вам нужна эта
# - gemma-3-27b-it - 27B параметров

GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048
GEMINI_PRICE_PER_1K_TOKENS_INPUT=0.000075
GEMINI_PRICE_PER_1K_TOKENS_OUTPUT=0.0003

OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_MODEL=qwen2.5:1.5b
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2500
OLLAMA_PRICE_PER_1K_TOKENS_INPUT=0.00
OLLAMA_PRICE_PER_1K_TOKENS_OUTPUT=0.00

OLLAMA_KEEP_ALIVE=5m
OLLAMA_MEMORY_LIMIT=2G
OLLAMA_CONTEXT_LENGTH=2048

# Pricing
AVG_INPUT_TOKENS_PER_PAGE=700
AVG_OUTPUT_TOKENS_PER_PAGE=150
PRICING_MARGIN_MULTIPLIER=10
PRICING_MIN_PAYMENT=2
PRICING_CURRENCY_CODE='EUR'

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
FRONTEND_HOST=http://localhost:6060

# SMTP (для magic link авторизации)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Magic Link
LOGIN_LINK_EXPIRY_MINUTES=15

# Database
DB_ROOT_PASSWORD=
DB_HOST=mysql
DB_PORT=3306
DB_NAME=llms-txt-generator-api
DB_USER=
DB_PASSWORD=

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_INSIGHT_HOST=redisinsight
REDIS_INSIGHT_PORT=8001

# Session
SESSION_COOKIE_NAME=llmstxt.sid
SESSION_SECRET=your_random_secret_key_change_in_production
SESSION_MAX_AGE=86400000

SOCKET_PATH="/ws"

AES_KEY=
AES_IV=